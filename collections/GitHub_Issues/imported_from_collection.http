# imported from 35240-0ef80acd-4f5c-4687-97e4-353aa29fdad0.postman_collection.json

// Adds an issue.

@name("Add Issue")
GET "https://api.github.com/repos/:owner/:repo/issues"
"Accept": "application/json"
"User-Agent": "API-Evangelist-Network"
? "access_token"= "{{github_token}}"
? "labels"= ""
? "filter"= "all"
? "state"= "open"
? "sort"= "created"
? "direction"= "asc"
? "since"= ""


