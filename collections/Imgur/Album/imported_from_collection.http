	("ids[]", "{{image2Hash}}"),
	("deletehashes", "{{deleteHash}}"),
	("title", "My dank meme album"),
	("description", "This album contains a lot of dank memes. Be prepared."),
	("privacy", "public"),
	("cover", "{{imageHash}}")
