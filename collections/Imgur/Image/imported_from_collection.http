#!/usr/bin/env dothttp

# imported from 35240-88a2f304-2020-4b6b-bc90-cf23d3fee2bb.postman_collection.json

// Get information about an image.

@name("Image")
GET "https://api.imgur.com/3/image/{{imageHash}}"
"Authorization": "Client-ID {{clientId}}"


// Upload a new image or video.
// 
// #### Accepted Video Formats
// | MIME Type        | 
// |------------------|
// | video/mp4        |
// | video/webm       |
// | video/x-matroska |
// | video/quicktime  |
// | video/x-flv      |
// | video/x-msvideo  |
// | video/x-ms-wmv   |
// | video/mpeg       |

@name("Image Upload")
POST "https://api.imgur.com/3/upload"
"Authorization": "Bearer 5eeae49394cd929e299785c8805bd168fc675280"
"Authorization": "Client-ID {{clientId}}"
files(
	("image", "None"),
	("video", "None"),
	("album", "{{albumHash}}"),
	("type", "url"),
	("name", "pixel.gif"),
	("title", "1x1 Pixel"),
	("description", "This is an 1x1 pixel image."),
	("disable_audio", "1")
)


// Deletes an image.
// 
// #### Response Model: [Basic](https://api.imgur.com/models/basic)

@name("Image Deletion (Un-Authed)")
DELETE "https://api.imgur.com/3/image/{{imageDeleteHash}}"
"Authorization": "Client-ID {{clientId}}"



// Deletes an image.
// 
// #### Response Model: [Basic](https://api.imgur.com/models/basic)

@name("Image Deletion (Authed)")
DELETE "https://api.imgur.com/3/image/{{imageHash}}"
"Authorization": "Bearer {{accessToken}}"



// Updates the title or description of an image.
// 
// #### Response Model: [Basic](https://api.imgur.com/models/basic)
// 
// #### Parameters
// 
// | Key         | Required | Description                   |
// |-------------|----------|-------------------------------|
// | title       | optional | The title of the image.       |
// | description | optional | The description of the image. |

@name("Update Image Information (Un-Authed)")
POST "https://api.imgur.com/3/image/{{imageDeleteHash}}"
"Authorization": "Client-ID {{clientId}}"
files(
	("title", "Heart"),
	("description", "This is an image of a heart outline.")
)


